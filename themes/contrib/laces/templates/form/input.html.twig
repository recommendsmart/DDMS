{#
/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}
{# Use bootstrap styles #}
{%
  set classes = [
  has_parent ? 'js-form-wrapper',
  has_parent ? 'mb-3',
  attributes.hasClass('button') ? 'btn',
  attributes.hasClass('button-primary') ? 'btn-outline-secondary',
  attributes.hasClass('button-primary') ? 'btn-sm',
  attributes.hasClass('form-autocomplete') ? 'form-control',
  attributes.hasClass('form-autocomplete') ? 'form-control-sm',
  attributes.hasClass('form-email') ? 'form-control',
  attributes.hasClass('form-email') ? 'form-control-sm',
  attributes.hasClass('form-file') ? 'form-control',
  attributes.hasClass('form-file') ? 'form-control-sm',
  attributes.hasClass('form-text') ? 'form-control',
  attributes.hasClass('form-text') ? 'form-control-sm',
  attributes.hasClass('form-text') ? attributes.removeClass('form-text'),
  attributes.hasClass('form-url') ? 'form-control',
  attributes.hasClass('form-url') ? 'form-control-sm',
]
%}
<input{{ attributes.addClass(classes) }}>{{ children }}
