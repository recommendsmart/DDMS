{#
/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}
{# Use bootstrap styles #}
{{ attach_library('laces/bootstrap-buttons') }}
{% set classes = [
  has_parent ? 'js-form-wrapper',
  has_parent ? 'mb-3',
  attributes.hasClass('form-file') ? 'form-control-file',
  attributes.hasClass('form-autocomplete') ? 'form-control form-control-sm',
  attributes.hasClass('form-text') ? 'form-control form-control-sm',
  attributes.hasClass('button') ? 'btn',
  attributes.hasClass('button-primary') ? 'btn-outline-secondary',
  attributes.hasClass('button-primary') ? 'btn-sm',
] %}
{% if attributes.title == 'Username or email address' %}
  {% set attributes = attributes.setAttribute("autocomplete", "username") %}
{% endif %}
<input{{ attributes.addClass(classes).removeClass('form-text') }}>{{ children }}
