{% extends "block.html.twig" %}
{#
/**
 * @file
 * Drulma theme implementation for a branding block.
 */
#}
{% block content %}
  {% if site_logo %}
    <a href="{{ path('<front>') }}" title="{{ 'Home'|t }}" rel="home">
      <img src="{{ site_logo }}" alt="{{ 'Home'|t }}" />
    </a>
  {% endif %}
  {% if site_name %}
    <a class="title" href="{{ path('<front>') }}" title="{{ 'Home'|t }}" rel="home">{{ site_name }}</a>
  {% endif %}
  <p class="subtitle">
    {{ site_slogan }}
  </p>
{% endblock %}
