<div {{ attributes.setAttribute('id', settings.wrapper_id).addClass('row', settings.wrapper_classes) }}>
  {% if content.sidebar_left %}
    <{{ settings.wrappers.sidebar_left }} class="columns medium-5">
      {{ content.sidebar_left }}
    </{{ settings.wrappers.sidebar_left }}>
  {% endif %}
  {% if content.sidebar_right %}
    <{{ settings.wrappers.sidebar_right }} class="columns medium-7">
      {{ content.sidebar_right }}
    </{{ settings.wrappers.sidebar_right }}>
  {% endif %}
</div>