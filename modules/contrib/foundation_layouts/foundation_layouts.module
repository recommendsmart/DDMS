<?php

/**
 * @file
 * Contains foundation_layouts.module..
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function foundation_layouts_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the foundation_layouts module.
    case 'help.page.foundation_layouts':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Provides ZURB Foundation grid system layouts.') . '</p>';
      return $output;

    default:
  }
}
