{% extends '@xy_grid_layouts/xy-grid-wrapper.html.twig' %}

{% block grid %}
    {% if content.top %}
      <{{ settings.wrappers.top }} class="columns {{settings.breakpoint}}-12">
        {{ content.top }}
      </{{ settings.wrappers.top }}>
    {% endif %}
    {% if content.upper_left %}
      <{{ settings.wrappers.upper_left }} class="cell {{settings.breakpoint}}-6">
        {{ content.upper_left }}
      </{{ settings.wrappers.upper_left }}>
    {% endif %}
    {% if content.upper_right %}
      <{{ settings.wrappers.upper_right }} class="cell {{settings.breakpoint}}-6">
        {{ content.upper_right }}
      </{{ settings.wrappers.upper_right }}>
    {% endif %}
    {% if content.middle %}
      <{{ settings.wrappers.middle }} class="cell {{settings.breakpoint}}-12">
        {{ content.middle }}
      </{{ settings.wrappers.middle }}>
    {% endif %}
    {% if content.lower_left %}
      <{{ settings.wrappers.lower_left }} class="cell {{settings.breakpoint}}-6">
        {{ content.lower_left }}
      </{{ settings.wrappers.lower_left }}>
    {% endif %}
    {% if content.lower_right %}
      <{{ settings.wrappers.lower_right }} class="cell {{settings.breakpoint}}-6">
        {{ content.lower_right }}
      </{{ settings.wrappers.lower_right }}>
    {% endif %}
    {% if content.bottom %}
      <{{ settings.wrappers.bottom }} class="cell {{settings.breakpoint}}-12">
        {{ content.bottom }}
      </{{ settings.wrappers.bottom }}>
    {% endif %}
{% endblock %}
