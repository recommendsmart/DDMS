{% extends '@xy_grid_layouts/xy-grid-wrapper.html.twig' %}

{% block grid %}
    {% if content.sidebar_left %}
        <{{ settings.wrappers.sidebar_left }} class="coll {{settings.breakpoint}}-6">
            {{ content.sidebar_left }}
        </{{ settings.wrappers.sidebar_left }}>
    {% endif %}
    {% if content.sidebar_right %}
        <{{ settings.wrappers.sidebar_right }} class="coll {{settings.breakpoint}}-6">
            {{ content.sidebar_right }}
        </{{ settings.wrappers.sidebar_right }}>
    {% endif %}
{% endblock %}
