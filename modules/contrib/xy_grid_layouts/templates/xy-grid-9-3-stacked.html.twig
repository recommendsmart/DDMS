{% extends '@xy_grid_layouts/xy-grid-wrapper.html.twig' %}

{% block grid %}
    {% if content.top %}
        <{{ settings.wrappers.top }} class="cell {{settings.breakpoint}}-12">
        {{ content.top }}
        </{{ settings.wrappers.top }}>
    {% endif %}
    {% if content.sidebar_left %}
        <{{ settings.wrappers.sidebar_left }} class="cell {{settings.breakpoint}}-9">
        {{ content.sidebar_left }}
        </{{ settings.wrappers.sidebar_left }}>
    {% endif %}
    {% if content.sidebar_right %}
        <{{ settings.wrappers.sidebar_right }} class="cell {{settings.breakpoint}}-3">
        {{ content.sidebar_right }}
        </{{ settings.wrappers.sidebar_right }}>
    {% endif %}
    {% if content.bottom %}
        <{{ settings.wrappers.bottom }} class="cell {{settings.breakpoint}}-12">
        {{ content.bottom }}
        </{{ settings.wrappers.bottom }}>
    {% endif %}
{% endblock %}
