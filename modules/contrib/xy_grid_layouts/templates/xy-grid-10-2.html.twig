{% extends '@xy_grid_layouts/xy-grid-wrapper.html.twig' %}

{% block grid %}
    {% if content.sidebar_left %}
        <{{ settings.wrappers.sidebar_left }} {{ region_attributes.sidebar_left.addClass('cell', settings.breakpoint ~ '-10') }}>
        {{ content.sidebar_left }}
        </{{ settings.wrappers.sidebar_left }}>
    {% endif %}
    {% if content.sidebar_right %}
        <{{ settings.wrappers.sidebar_right }} {{ region_attributes.sidebar_right.addClass('cell', settings.breakpoint ~ '-2') }}>
        {{ content.sidebar_right }}
        </{{ settings.wrappers.sidebar_right }}>
    {% endif %}
{% endblock %}
