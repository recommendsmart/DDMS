{% extends '@xy_grid_layouts/xy-grid-wrapper.html.twig' %}

{% block grid %}
    {% if content.sidebar_left %}
      <{{ settings.wrappers.sidebar_left }} {{ region_attributes.sidebar_left.addClass('cell', settings.breakpoint ~ '-3') }}>
        {{ content.sidebar_left }}
      </{{ settings.wrappers.sidebar_left }}>
    {% endif %}
    {% if content.main %}
      <{{ settings.wrappers.main }} {{ region_attributes.main.addClass('cell', settings.breakpoint ~ '-6') }}>
        {{ content.main }}
      </{{ settings.wrappers.main }}>
    {% endif %}
    {% if content.sidebar_right %}
      <{{ settings.wrappers.sidebar_right }} {{ region_attributes.sidebar_right.addClass('cell', settings.breakpoint ~ '-3') }}>
        {{ content.sidebar_right }}
      </{{ settings.wrappers.sidebar_right }}>
    {% endif %}
{% endblock %}
