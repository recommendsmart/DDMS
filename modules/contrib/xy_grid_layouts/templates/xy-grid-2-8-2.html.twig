{% extends '@xy_grid_layouts/xy-grid-wrapper.html.twig' %}

{% block grid %}
    {% if content.sidebar_left %}
      <{{ settings.wrappers.sidebar_left }} class="cell {{settings.breakpoint}}-2">
        {{ content.sidebar_left }}
      </{{ settings.wrappers.sidebar_left }}>
    {% endif %}
    {% if content.main %}
      <{{ settings.wrappers.main }} class="cell {{settings.breakpoint}}-8">
        {{ content.main }}
      </{{ settings.wrappers.main }}>
    {% endif %}
    {% if content.sidebar_right %}
      <{{ settings.wrappers.sidebar_right }} class="cell {{settings.breakpoint}}-2">
        {{ content.sidebar_right }}
      </{{ settings.wrappers.sidebar_right }}>
    {% endif %}
{% endblock %}
